include $(TOP)/config/make.cfg

#MM demo-firework : demo-firework-icons

DESTDIR	:= $(CONTRIBDIR)/Demos/Firework

%build_prog mmake=demo-firework \
    progname=Firework targetdir=$(DESTDIR) \
    files=firework uselibs="arossupport amiga arosc m"


ICONS := Firework
ICONFILES := $(foreach f, $(ICONS), $(DESTDIR)/$(f).info)

#MM
demo-firework-icons : $(ICONFILES)
	
$(DESTDIR)/%.info : icons/%.info.src icons/%_N.png icons/%_S.png | $(DESTDIR)
	%makeicon2

%rule_makedirs dirs=$(DESTDIR)
