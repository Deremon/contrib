include $(TOP)/config/make.cfg

#MM demo-metaballs : demo-metaballs-icons

DESTDIR := $(CONTRIBDIR)/Demos/Metaballs

%build_prog mmake=demo-metaballs \
    progname=Metaballs targetdir=$(DESTDIR) \
    files=metaballs uselibs="arossupport amiga arosc m"


ICONS := Metaballs
ICONFILES := $(foreach f, $(ICONS), $(DESTDIR)/$(f).info)

#MM
demo-metaballs-icons : $(ICONFILES)
	
$(DESTDIR)/%.info : icons/%.info.src icons/%_N.png icons/%_S.png | $(DESTDIR)
	%makeicon2

%rule_makedirs dirs=$(DESTDIR)

