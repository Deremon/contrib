include $(TOP)/config/make.cfg

#MM demo-parallax : demo-parallax-icons

DESTDIR := $(CONTRIBDIR)/Demos/Parallax

%build_prog mmake=demo-parallax \
    progname=Parallax targetdir=$(DESTDIR) \
    files=parallax uselibs="arossupport amiga arosc m"


ICONS := Parallax
ICONFILES := $(foreach f, $(ICONS), $(DESTDIR)/$(f).info)

#MM
demo-parallax-icons : $(ICONFILES)
	
$(DESTDIR)/%.info : icons/%.info.src icons/%_N.png icons/%_S.png | $(DESTDIR)
	%makeicon2

%rule_makedirs dirs=$(DESTDIR)
