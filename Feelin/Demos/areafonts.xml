<?xml version="1.0" ?>

<feelin:application>
   <Application name='app'>
      <Window name='win' Title='Feelin : Differents fonts' Open='true'>
         <Group ID="1">
            <HGroup Frame='$group-frame' FA_Frame_Title='Garnet/16' FA_Frame_Font='Garnet/16' Font='Garnet/16'>
               <SimpleButton Font='Inherit'>Save</SimpleButton>
               <SimpleButton Font='Inherit'>Use</SimpleButton>
               <SimpleButton Font='Inherit'>Cancel</SimpleButton>
            </HGroup>

            <HGroup Frame='$group-frame' FA_Frame_Title='Helvetica/15' FA_Frame_Font='Helvetica/15' Font='Helvetica/15'>
               <SimpleButton Font='Inherit'>Save</SimpleButton>
               <SimpleButton Font='Inherit'>Use</SimpleButton>
               <SimpleButton Font='Inherit'>Cancel</SimpleButton>
            </HGroup>

            <HGroup Frame='$group-frame' FA_Frame_Title='Diamond/12' FA_Frame_Font='Diamond/12' Font='Diamond/12'>
               <SimpleButton Font='Inherit'>Save</SimpleButton>
               <SimpleButton Font='Inherit'>Use</SimpleButton>
               <SimpleButton Font='Inherit'>Cancel</SimpleButton>
            </HGroup>

            <HGroup Frame='$group-frame' FA_Frame_Title='topaz/8' FA_Frame_Font='topaz/8' Font='topaz/8'>
               <SimpleButton Font='Inherit'>Save</SimpleButton>
               <SimpleButton Font='Inherit'>Use</SimpleButton>
               <SimpleButton Font='Inherit'>Cancel</SimpleButton>
            </HGroup>
         </Group>
      </Window>
   </Application>

   <notify>
      <win attribute='CloseRequest' value='true' target='app' method='Shutdown' />
   </notify>
</feelin:application>
