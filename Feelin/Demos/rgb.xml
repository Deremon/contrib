<?xml version = "1.0" ?>

<!-- My first XML application -->

<feelin:application>

   <!-- Here we define the application tree, the GUI -->

   <Application name='app'
      Title='demo_RGB'
      Version='$VER: demo_RGB 04.00 (2004/11/01)'
      Copyright='(c) 2000-2004 Olivier LAVIALE'
      Author='Olivier LAVIALE - gofromiel@gofromiel.com'
      Description='Application XML'
      Base='DEMO_RGB'
   >
      <Window name='win' ID='!MAIN' Open='yes' Title='Feelin : XMLApplication'>
         <HGroup Font='Garnet/16'>
            <SimpleButton Font='Inherit' SetMax='None' VCenter="true" ColorScheme="&lt;scheme shine='#FF0000' fill='#C00000' dark='#000000' text='#00FF00' highlight='#0000FF' /&gt;" ContextHelp="&lt;font face=garnet size=16 color=#FF0000&gt;&lt;pens shadow=halfdark&gt;Red color&lt;/pens&gt;&lt;/font&gt;'">_Red</SimpleButton>
            <SimpleButton Font='Inherit' SetMax='None' VCenter="true" ColorScheme="&lt;scheme shine='#00FF00' fill='#00C000' dark='#000000' text='#0000FF' highlight='#FF0000' /&gt;" ContextHelp="&lt;font face=garnet size=16 color=#00FF00&gt;&lt;pens shadow=halfdark&gt;Green color&lt;/pens&gt;&lt;/font&gt;'">_Green</SimpleButton>
            <SimpleButton Font='Inherit' SetMax='None' VCenter="true" ColorScheme="&lt;scheme shine='#0000FF' fill='#0000C0' dark='#000000' text='#FF0000' highlight='#00FF00' /&gt;" ContextHelp="&lt;font face=garnet size=16 color=#0000FF&gt;&lt;pens shadow=halfdark&gt;Blue color&lt;/pens&gt;&lt;/font&gt;'">_Blue</SimpleButton>
         </HGroup>
      </Window>
   </Application>

   <!-- Here we define events -->

   <notify>
      <win attribute='CloseRequest' value='true' target='app' method='Shutdown' />
   </notify>
</feelin:application>
