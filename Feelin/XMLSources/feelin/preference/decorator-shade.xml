<?xml version="1.0" ?>

<feelin:objects>
        
    <Group Frame="$group-frame" Title="Dimensions">
        <HGroup>
            <HLabel>Border</HLabel>
            <Slider name="decorator-shade-border" Horizontal="true" SetMax="Height" Min="2" Max="16" />
        </HGroup>

        <Bar Title="Gadgets" />

        <Group Columns="2">
            <HLabel>Width</HLabel>
            <Slider name="decorator-shade-gadgets-width" Horizontal="true" SetMax="Height" Min="6" Max="32" />
            <HLabel>Height</HLabel>
            <Slider name="decorator-shade-gadgets-height" Horizontal="true" SetMax="Height" Min="6" Max="32" />
        </Group>
    </Group>
</feelin:objects>
