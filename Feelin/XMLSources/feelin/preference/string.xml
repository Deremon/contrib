<?xml version="1.0" ?>

<feelin:objects>
   <HGroup>
      <Group Frame="$group-frame" Title="msg:gadget">
         <HGroup>
            <HLabel Text="msg:font" />
            <PopFont name="string-font" />
         </HGroup>
         
         <Bar />

         <Group Rows="2" VSpacing="2">
            <PopFrame name="string-frame" Couple="true" />
            <PopImage name="string-back" Couple="true" />
            <PopScheme name="string-scheme" />
            <VLabel Text="msg:frame" />
            <VLabel Text="msg:back" />
            <VLabel Text="msg:scheme" />
         </Group>
      </Group>

      <Group Frame="$group-frame" Title="msg:cursor">
         <HGroup>
            <HLabel Text="msg:speed" />
            <Slider name="string-blink-speed" Horizontal="true" Max="50" SetMax="Height" />
         </HGroup>
         
         <Bar />

         <Group Rows="2" VSpacing="2">
            <PopImage name="string-cursor" />
            <PopImage name="string-blink" />
            <VLabel Text="msg:cursor" />
            <VLabel Text="msg:blink" />
         </Group>
      </Group>
   </HGroup>

   <Group Rows="2" Frame="$group-frame" Title="msg:text" VSpacing="2">
      <PopColor name="string-text-active" />
      <PopColor name="string-text-inactive" />
      <PopColor name="string-text-block" />
      <VLabel Text="msg:active" />
      <VLabel Text="msg:inactive" />
      <VLabel Text="msg:block" />
   </Group>
</feelin:objects>
