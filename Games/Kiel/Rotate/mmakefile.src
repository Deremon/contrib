# $Id$
include $(TOP)/config/make.cfg

%define_libs

CFLAGS	:= $(USER_DEFINES) -O2 -Wunused -Wall $(SPECIAL_CFLAGS) $(INCLUDES)
OBJDIR	:= $(GENDIR)/$(CURDIR)
DESTDIR := $(CONTRIBDIR)/Games/Kiel

EXES := $(DESTDIR)/Rotate

.PHONY : all clean

#MM- contrib-games : games-kiel-rotate
#MM
games-kiel-rotate : setup-games games

games : $(EXES)
	@$(NOP)

setup-games :
	%mkdirs_q $(DESTDIR) $(OBJDIR)

$(EXES) : $(DESTDIR)/% : $(OBJDIR)/%.o $(DEPLIBS)
	@$(ECHO) "Linking $@..."
	@$(CC) $(ILDFLAGS) -o $@ $(STARTUP) $< $(LIBS)
	@$(ECHO) "Checking $@..."
	@$(CHECKUDS) $@

#MM
clean-contrib-games :
	@$(RM) $(OBJDIR) $(DESTDIR)

$(OBJDIR)/%.o : %.c defines.h functions.h includes.h screen.h
	%compile_q

