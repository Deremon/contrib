# Makefile for SDL test programs

include $(TOP)/config/make.cfg

FILES  := testalpha \
    	  testbitmap \
	  testcdrom \
	  testgamma \
	  testgl \
	  testjoystick \
	  testsprite \
	  testtimer \
	  testtypes \
	  testwin \
	  testwm

#	  testerror \
#	  testhread \
#	  testkeys \
#	  testlock \
#	  testpalette \
#	  testsem \
#	  testver \
#	  testvidinfo \

	  
DATAFILES := icon.bmp picture.xbm sail.bmp sample.bmp sample.wav

EXEDIR := $(CONTRIBDIR)/sdl/test
EXES   := $(foreach f,$(FILES),$(EXEDIR)/$(f))
DATAS  := $(foreach f,$(DATAFILES),$(EXEDIR)/$(f))

USE_CLIB	:= yes
USE_AMIGALIB    := yes
USE_AROSLIB     := yes
USE_SDLLIB  	:= yes
USE_MLIB    	:= yes

USER_INCLUDES := -I$(AROS_INCLUDES)/SDL

#MM test-sdl : includes linklibs linklibs-SDL

%make_prog_setup mmake=test-sdl

LIBS := $(LIBS) -lamiga -larossupport #urk :-(

test-sdl : setup $(EXES) $(DATAS)

%make_prog_single dir=$(EXEDIR)

$(EXEDIR)/%.bmp : %.bmp
	@$(CP) $< $@

$(EXEDIR)/%.xbm : %.xbm
	@$(CP) $< $@

$(EXEDIR)/%.wav : %.wav
	@$(CP) $< $@

%common
%include_deps
