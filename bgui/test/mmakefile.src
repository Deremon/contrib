# Makefile for the BGUI Test programs

include $(TOP)/config/make.cfg
include ../make.cfg

FILES = test1 \
	test2 \
	test3 \
	test4 \
	test5 \
	test6 \
	test7 \
	test8 \
	test9 \
	test13

# I'd like to move this into a rule, but it would be far too hard.
EXES := $(foreach f,$(FILES), $(BGUITESTSDIR)/$(f))

USE_BGUILIB := yes
USE_CLIB_SHARED := yes
USE_AMIGALIB := yes
USE_MLIB := yes
USE_AROSLIB := yes

#MM bgui-test : includes linklibs

%make_prog_setup mmake=bgui-test

bgui-test : setup $(EXES)

%make_prog_single dir=$(BGUITESTSDIR)

%common
%include_deps
