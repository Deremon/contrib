include $(TOP)/config/make.cfg

#MM contrib-gfx-libs-cairo-test-pdiff : contrib-gfx-libs-cairo-test-pdiff-lib includes linklibs

#MM contrib-gfx-libs-cairo-test-pdiff-lib : includes

FILES := args perceptualdiff
LIBFILES := lpyramid pdiff
TARGETDIR := $(AROS_TESTS)/cairo
USER_CFLAGS := -DHAVE_CONFIG_H -DCAIRO_NO_MUTEX
USER_INCLUDES := -I$(SRCDIR)/$(CURDIR)/../../aros -I$(SRCDIR)/$(CURDIR)/../../src
USER_LDFLAGS := -L$(TARGETDIR)

%build_prog mmake=contrib-gfx-libs-cairo-test-pdiff progname=perceptualdiff \
  files=$(FILES) targetdir=$(TARGETDIR) uselibs="cairo pixman png z freetype2 pdiff"

%build_linklib mmake=contrib-gfx-libs-cairo-test-pdiff-lib libname=pdiff \
  files=$(LIBFILES) libdir=$(TARGETDIR)

%common
