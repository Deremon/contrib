include $(TOP)/config/make.cfg

FILES 	    :=  mesasimplerendering \
                mesagetprocaddress
                
EXEDIR      := $(AROSDIR)/Tests

#MM- contrib-gfx-libs-mesa-tests : contrib-gfx-libs-mesa-includes includes mesa-mesahidd-module

#MM- mesa-tests-gallium : contrib-gfx-libs-mesa-includes includes mesa-mesa-gallium-linklib

%build_progs mmake=contrib-gfx-libs-mesa-tests \
    targetdir=$(EXEDIR) \
    files="$(FILES)" uselibs="GL"

%build_prog mmake=mesa-tests-gallium progname="gallium" \
    targetdir=$(EXEDIR) \
    files="mesasimplerendering" uselibs="GLGalliumStatic"
    
%common
