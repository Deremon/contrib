-include $(TOP)/config/make.cfg

ifeq ($(AROS_TARGET_CPU),m68k)
# Don't build gcc for m68k.. yet.
development-gcc--fetch:
	@$(ECHO) -n

development-gcc--configure:
	@$(ECHO) -n

development-gcc--build_and_install-quick:
	@$(ECHO) -n

postinstall-gcc-delete-la-files:
	@$(ECHO) -n

contrib-gnu-gcc-deletefixed:
	@$(ECHO) -n

development-gcc--make-package:
	@#(ECHO) -n

else

# Override faked target compiler with real cross compiler.
TARGET_CC := $(CROSSTOOLSDIR)/$(AROS_TARGET_CPU)-aros-gcc

GCC_VERSION := 4.2.4

#MM- contrib-gnu : contrib-gnu-gcc
#MM- contrib-gnu-gcc : tools-crosstools development-collect-aros development-gcc

EXTRAOPTS := \
    --enable-languages=c,c++ --enable-longlong --enable-sjlj-exceptions \
    --enable-version-specific-runtime-libs --disable-libssp --disable-libstdcxx-pch \
    --with-sysroot=/Development --with-build-sysroot=$(AROS_DEVELOPMENT)

%fetch_and_build_gnu_development package=gcc version=$(GCC_VERSION) patch=yes \
    extraoptions=$(EXTRAOPTS) \
    postinstall=contrib-gnu-gcc-deletefixed

#MM
contrib-gnu-gcc-deletefixed:
	FIXED_INCLUDES=`grep -lr "DO NOT EDIT THIS FILE" $(AROS_LIB)/gcc/$(AROS_TARGET_CPU)-aros/$(GCC_VERSION)/include`; \
	$(IF) $(TEST) -n "$$FIXED_INCLUDES"; then \
	$(ECHO) "Removing fixed includes: " $$FIXED_INCLUDES; \
	$(RM) $$FIXED_INCLUDES; \
	else \
	$(ECHO) "No fixed includes to remove."; \
	fi; \
	unset FIXED_INCLUDES;
endif
