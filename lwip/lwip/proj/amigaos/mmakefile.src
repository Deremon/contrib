#MM
lwip : setup $(EXE)

#MM 
testserver : $(OBJS1)
	%compile_q
#MM
testclient :$(OBJS2)
	%compile_q

$(OBJDIR)/%.o: %.S
	%compile_q opt=$(USER_CFLAGS)

%make_prog_setup mmake=lwip
