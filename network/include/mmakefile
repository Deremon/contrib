# $Id$
include $(TOP)/config/make.cfg

INCSUBDIRS := \
    arpa \
    net \
    netinet \
    protocols \
    rpc \
    rpcsvc \
    sys

FILES := \
    grp.h \
    netdb.h \
    pwd.h \
    utime.h \
    utmp.h

INCLUDES      := $(foreach d,$(INCSUBDIRS),$(wildcard $(d)/*.h)) $(FILES)
DEST_INCLUDES := $(foreach f,$(INCLUDES),$(AROS_INCLUDES)/$(f))

#MM network-includes : includes setup-network-includes
network-includes : $(DEST_INCLUDES)
	@$(NOP)

$(AROS_INCLUDES)/%.h : %.h
	$(CP) $< $@

#MM
setup-network-includes :
	@$(FOR) dir in $(AROS_INCLUDES) $(foreach f,$(INCSUBDIRS),$(AROS_INCLUDES)/$(f)) ; do \
	   $(IF) $(TEST) ! -d "$$dir" ; then $(MKDIR) "$$dir" ; else true ; fi ;\
	done

#MM
clean :
	-$(RM) $(AROS_INCLUDES)
