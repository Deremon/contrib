	$(CC) $(COPT) $(CC2O) $(DYN_COMP) -c $(srcdir)/regina.c

drexx.$(OBJ) : $(srcdir)/rexx.c
	-mv rexx.$(OBJ) rexx$(OSAVE)
	$(CC) $(COPT) -c -DRXLIB $(srcdir)/rexx.c
	 -mv rexx.$(OBJ) drexx.$(OBJ)
